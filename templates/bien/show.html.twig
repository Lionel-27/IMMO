{% extends 'base.html.twig' %}

{% block title %}Bien{% endblock %}

{% block body %}
    <div class="row">
    <div class="col-6">
    <h1 class="text-default">Bien</h1>
    </div>
    <div class="col-6">
     <a href="{{ path('bien_index') }}">Retour à la liste</a>
    </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bien.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bien.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ bien.prix }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>  {% if bien.photo %}
                <img src="{{asset("uploads/images/"~ bien.photo )}}">
                 {% endif %}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ bien.categorie }}</td>
            </tr>
            <tr>
                <th>Ajouté le :</th>
                <td>{{ bien.createdAt ? bien.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le :</th>
                <td>{{ bien.updatedAt ? bien.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ bien.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ bien.type }}</td>
            </tr>
        </tbody>
    </table>

   

    <a class="btn btn-default" href="{{ path('bien_edit', {'id': bien.id}) }}">Modifier</a>

    {{ include('bien/_delete_form.html.twig') }}
{% endblock %}
